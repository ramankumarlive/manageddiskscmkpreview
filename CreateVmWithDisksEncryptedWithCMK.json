{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineName": {
      "type": "string",
     "defaultValue":"anpodarDesVM1"
    },
    "adminPassword": {
      "type": "securestring",
    "defaultValue":"UnsecurePwd1!"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS3_V2"
    },
    "diskSkuName": {
      "type": "string",
      "defaultValue": "Premium_LRS"
    },
    "dataDiskSizeInGb": {
      "type": "string",
      "defaultValue": "512"
    },
    "diskEncryptionSetId": {
      "type": "string",
    "defaultValue": "/subscriptions/98a2d751-10a7-4f96-aea1-3aaa8a91ead1/resourceGroups/ANPODARSSECMKCENTRALUSEUAP/providers/Microsoft.Compute/diskEncryptionSets/MYTESTDESCENTRALUSEUAP1"
    },
  "region":{  
   "type":"string",
   "defaultValue":"CentralUSEUAP"
    }
  },
  "variables": {
    "networkInterfaceName": "[concat(parameters('virtualMachineName'), '123')]",
    "vnetName": "[concat(parameters('virtualMachineName'), 'vnet')]",
    "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', variables('vnetName'))]",
    "nsgName": "[concat(parameters('virtualMachineName'), '_nsg')]",
    "nsgID": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('nsgName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/default')]",
    "diskName": "[concat(parameters('virtualMachineName'), '_osDisk')]",
    "dataDiskName": "[concat(parameters('virtualMachineName'), '_dataDisk')]",
    "imageReference": {
      "publisher": "MicrosoftWindowsServer",
      "offer": "WindowsServer",
      "sku": "2012-R2-Datacenter",
      "version": "latest"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('nsgName')]",
      "location":"[parameters('region')]",
      "apiVersion": "2018-01-01",
      "properties": {
        "securityRules": [
          {
            "name": "webHttpsRule",
            "properties": {
              "description": "This rule allows traffic in on port 443",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "INTERNET",
              "destinationAddressPrefix": "172.20.1.0/24",
              "access": "Allow",
              "priority": 110,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('virtualMachineName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "location":"[parameters('region')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfaceName'))]",
      ],
      "properties": {
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "adminUserIsTest",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "imageReference": "[variables('imageReference')]",
          "osDisk": {
            "name": "[variables('diskName')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('diskSkuName')]",
              "diskEncryptionSet": {
                "id": "[parameters('diskEncryptionSetId')]"
              }
            }
          },
          "dataDisks": [
            {
               "name": "[variables('dataDiskName')]",
                "diskSizeGB": "[parameters('dataDiskSizeInGb')]",
                "lun": "0",
                "createOption": "Empty",
                "managedDisk": {
                  "storageAccountType": "[parameters('diskSkuName')]",
                  "diskEncryptionSet": {
                    "id": "[parameters('diskEncryptionSetId')]"
                    }
                }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
            }
          ]
        }
      },
      "tags": {
        "DiskRP-Test-Template": "VM_AttachDiskWithSSECMKTemplate.json",
        "$perfOptimizationLevel ": "1"
      }
    },
    {
      "name": "[variables('vnetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2017-04-01",
      "location":"[parameters('region')]",
      "dependsOn": [
        "[variables('nsgID')]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "172.20.1.0/24"
          ]
        },
        "subnets": [
          {
            "name": "default",
            "properties": {
              "addressPrefix": "172.20.1.0/24",
              "networkSecurityGroup": {
                "id": "[variables('nsgID')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('networkInterfaceName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-04-01",
      "location":"[parameters('region')]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "vmId": {
      "type": "string",
      "value": "[resourceId(resourceGroup().name,'Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]"
    },
    "diskId": {
      "type": "string",
      "value": "[resourceId(resourceGroup().name,'Microsoft.Compute/disks', variables('diskName'))]"
    }
  }
}